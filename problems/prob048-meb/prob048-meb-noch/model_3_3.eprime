language ESSENCE' 1.0

given numNodes: int(1..)
given maxPower: int(1..)
given initialNode: int(1..)
given linkCosts:
        matrix indexed by [int(1..numNodes), int(1..numNodes)] of int(0..maxPower)
find nodeBroadcastPower:
        matrix indexed by [int(1..numNodes)] of int(0..maxPower)
find directChildrenMatrix_ExplicitVarSizeWithMarker_Marker:
        matrix indexed by [int(1..numNodes)] of int(0..1 + (numNodes - 1))
find directChildrenMatrix_ExplicitVarSizeWithMarker_Values:
        matrix indexed by [int(1..numNodes),
                           int(1..1 + (numNodes - 1))] of int(1..numNodes)
find totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker:
        matrix indexed by [int(1..numNodes)] of int(0..1 + (numNodes - 1))
find totalChildrenMatrix_ExplicitVarSizeWithMarker_Values:
        matrix indexed by [int(1..numNodes),
                           int(1..1 + (numNodes - 1))] of int(1..numNodes)
minimising sum([nodeBroadcastPower[i] | i : int(1..numNodes)])
such that
    and([i = j \/
         sum([toInt(q19 <= directChildrenMatrix_ExplicitVarSizeWithMarker_Marker[i] /\
                    or([q21 <= directChildrenMatrix_ExplicitVarSizeWithMarker_Marker[j] /\
                        directChildrenMatrix_ExplicitVarSizeWithMarker_Values[j, q21] =
                        directChildrenMatrix_ExplicitVarSizeWithMarker_Values[i, q19]
                            | q21 : int(1..1 + (numNodes - 1))]))
                  | q19 : int(1..1 + (numNodes - 1))])
         = 0 | i : int(1..numNodes), j : int(1..numNodes)]),
    totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[initialNode] = numNodes,
    and([or([q12 <= totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[node] /\
             totalChildrenMatrix_ExplicitVarSizeWithMarker_Values[node, q12] = node
                 | q12 : int(1..1 + (numNodes - 1))])
         /\
         sum([toInt(q10 <= directChildrenMatrix_ExplicitVarSizeWithMarker_Marker[node]) *
              totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[directChildrenMatrix_ExplicitVarSizeWithMarker_Values[node,
                                                                                                                         q10]]
                  | q10 : int(1..1 + (numNodes - 1))])
         = totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[node] - 1
         /\
         and([q13 <= directChildrenMatrix_ExplicitVarSizeWithMarker_Marker[node] ->
              and([q15 <=
                   totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[directChildrenMatrix_ExplicitVarSizeWithMarker_Values[node,
                                                                                                                              q13]]
                   ->
                   or([q17 <= totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[node] /\
                       totalChildrenMatrix_ExplicitVarSizeWithMarker_Values[node, q17] =
                       totalChildrenMatrix_ExplicitVarSizeWithMarker_Values[directChildrenMatrix_ExplicitVarSizeWithMarker_Values[node,
                                                                                                                                  q13],
                                                                            q15]
                           | q17 : int(1..1 + (numNodes - 1))])
                       | q15 : int(1..1 + (numNodes - 1))])
              /\
              linkCosts[node,
                        directChildrenMatrix_ExplicitVarSizeWithMarker_Values[node, q13]]
              != 0
              /\
              nodeBroadcastPower[node] >=
              linkCosts[node,
                        directChildrenMatrix_ExplicitVarSizeWithMarker_Values[node, q13]]
                  | q13 : int(1..1 + (numNodes - 1))])
             | node : int(1..numNodes)]),
    and([and([q3 + 1 <= directChildrenMatrix_ExplicitVarSizeWithMarker_Marker[q2] ->
              directChildrenMatrix_ExplicitVarSizeWithMarker_Values[q2, q3] <
              directChildrenMatrix_ExplicitVarSizeWithMarker_Values[q2, q3 + 1]
                  | q3 : int(1..1 + (numNodes - 1) - 1)])
             | q2 : int(1..numNodes)]),
    and([and([q4 > directChildrenMatrix_ExplicitVarSizeWithMarker_Marker[q2] ->
              directChildrenMatrix_ExplicitVarSizeWithMarker_Values[q2, q4] = 1
                  | q4 : int(1..1 + (numNodes - 1))])
             | q2 : int(1..numNodes)]),
    and([and([q7 + 1 <= totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[q6] ->
              totalChildrenMatrix_ExplicitVarSizeWithMarker_Values[q6, q7] <
              totalChildrenMatrix_ExplicitVarSizeWithMarker_Values[q6, q7 + 1]
                  | q7 : int(1..1 + (numNodes - 1) - 1)])
             | q6 : int(1..numNodes)]),
    and([and([q8 > totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[q6] ->
              totalChildrenMatrix_ExplicitVarSizeWithMarker_Values[q6, q8] = 1
                  | q8 : int(1..1 + (numNodes - 1))])
             | q6 : int(1..numNodes)])

