language ESSENCE' 1.0

given numNodes: int(1..)
given maxPower: int(1..)
given initialNode: int(1..)
given linkCosts:
        matrix indexed by [int(1..numNodes), int(1..numNodes)] of int(0..maxPower)
find nodeBroadcastPower:
        matrix indexed by [int(1..numNodes)] of int(0..maxPower)
find directChildrenMatrix_ExplicitVarSizeWithMarker_Marker:
        matrix indexed by [int(1..numNodes)] of int(0..1 + (numNodes - 1))
find directChildrenMatrix_ExplicitVarSizeWithMarker_Values:
        matrix indexed by [int(1..numNodes),
                           int(1..1 + (numNodes - 1))] of int(1..numNodes)
find totalChildrenMatrix_ExplicitVarSizeWithFlags_Flags:
        matrix indexed by [int(1..numNodes), int(1..1 + (numNodes - 1))] of bool
find totalChildrenMatrix_ExplicitVarSizeWithFlags_Values:
        matrix indexed by [int(1..numNodes),
                           int(1..1 + (numNodes - 1))] of int(1..numNodes)
minimising sum([nodeBroadcastPower[i] | i : int(1..numNodes)])
such that
    and([i = j \/
         sum([q8 <= directChildrenMatrix_ExplicitVarSizeWithMarker_Marker[i] /\
              or([q9 <= directChildrenMatrix_ExplicitVarSizeWithMarker_Marker[j] /\
                  directChildrenMatrix_ExplicitVarSizeWithMarker_Values[j, q9] =
                  directChildrenMatrix_ExplicitVarSizeWithMarker_Values[i, q8]
                      | q9 : int(1..1 + (numNodes - 1))])
                  | q8 : int(1..1 + (numNodes - 1))])
         = 0 | i : int(1..numNodes), j : int(1..numNodes)]),
    sum([totalChildrenMatrix_ExplicitVarSizeWithFlags_Flags[initialNode, q10]
             | q10 : int(1..1 + (numNodes - 1))])
    = numNodes,
    and([or([totalChildrenMatrix_ExplicitVarSizeWithFlags_Flags[node, q11] /\
             totalChildrenMatrix_ExplicitVarSizeWithFlags_Values[node, q11] = node
                 | q11 : int(1..1 + (numNodes - 1))])
         /\
         sum([(q5 <= directChildrenMatrix_ExplicitVarSizeWithMarker_Marker[node]) *
              sum([totalChildrenMatrix_ExplicitVarSizeWithFlags_Flags[directChildrenMatrix_ExplicitVarSizeWithMarker_Values[node,
                                                                                                                            q5],
                                                                      q12]
                       | q12 : int(1..1 + (numNodes - 1))])
                  | q5 : int(1..1 + (numNodes - 1))])
         =
         sum([totalChildrenMatrix_ExplicitVarSizeWithFlags_Flags[node, q13]
                  | q13 : int(1..1 + (numNodes - 1))])
         - 1
         /\
         and([q6 <= directChildrenMatrix_ExplicitVarSizeWithMarker_Marker[node] ->
              and([totalChildrenMatrix_ExplicitVarSizeWithFlags_Flags[directChildrenMatrix_ExplicitVarSizeWithMarker_Values[node,
                                                                                                                            q6],
                                                                      q14]
                   ->
                   or([totalChildrenMatrix_ExplicitVarSizeWithFlags_Flags[node, q15] /\
                       totalChildrenMatrix_ExplicitVarSizeWithFlags_Values[node, q15] =
                       totalChildrenMatrix_ExplicitVarSizeWithFlags_Values[directChildrenMatrix_ExplicitVarSizeWithMarker_Values[node,
                                                                                                                                 q6],
                                                                           q14]
                           | q15 : int(1..1 + (numNodes - 1))])
                       | q14 : int(1..1 + (numNodes - 1))])
              /\
              linkCosts[node, directChildrenMatrix_ExplicitVarSizeWithMarker_Values[node, q6]]
              != 0
              /\
              nodeBroadcastPower[node] >=
              linkCosts[node, directChildrenMatrix_ExplicitVarSizeWithMarker_Values[node, q6]]
                  | q6 : int(1..1 + (numNodes - 1))])
             | node : int(1..numNodes)]),
    and([and([q2 + 1 <= directChildrenMatrix_ExplicitVarSizeWithMarker_Marker[q1] ->
              directChildrenMatrix_ExplicitVarSizeWithMarker_Values[q1, q2] <
              directChildrenMatrix_ExplicitVarSizeWithMarker_Values[q1, q2 + 1]
                  | q2 : int(1..1 + (numNodes - 1) - 1)])
             | q1 : int(1..numNodes)]),
    and([and([q2 > directChildrenMatrix_ExplicitVarSizeWithMarker_Marker[q1] ->
              directChildrenMatrix_ExplicitVarSizeWithMarker_Values[q1, q2] = 1
                  | q2 : int(1..1 + (numNodes - 1))])
             | q1 : int(1..numNodes)]),
    and([and([totalChildrenMatrix_ExplicitVarSizeWithFlags_Flags[q3, q4 + 1] ->
              totalChildrenMatrix_ExplicitVarSizeWithFlags_Values[q3, q4] <
              totalChildrenMatrix_ExplicitVarSizeWithFlags_Values[q3, q4 + 1]
                  | q4 : int(1..1 + (numNodes - 1) - 1)])
             | q3 : int(1..numNodes)]),
    and([and([totalChildrenMatrix_ExplicitVarSizeWithFlags_Flags[q3, q4] = false ->
              totalChildrenMatrix_ExplicitVarSizeWithFlags_Values[q3, q4] = 1
                  | q4 : int(1..1 + (numNodes - 1))])
             | q3 : int(1..numNodes)]),
    and([and([totalChildrenMatrix_ExplicitVarSizeWithFlags_Flags[q3, q4 + 1] ->
              totalChildrenMatrix_ExplicitVarSizeWithFlags_Flags[q3, q4]
                  | q4 : int(1..1 + (numNodes - 1) - 1)])
             | q3 : int(1..numNodes)])

