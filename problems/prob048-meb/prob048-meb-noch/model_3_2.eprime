language ESSENCE' 1.0

given numNodes: int(1..)
given maxPower: int(1..)
given initialNode: int(1..)
given linkCosts:
        matrix indexed by [int(1..numNodes), int(1..numNodes)] of int(0..maxPower)
find nodeBroadcastPower:
        matrix indexed by [int(1..numNodes)] of int(0..maxPower)
find directChildrenMatrix_ExplicitVarSizeWithFlags_Flags:
        matrix indexed by [int(1..numNodes), int(1..1 + (numNodes - 1))] of bool
find directChildrenMatrix_ExplicitVarSizeWithFlags_Values:
        matrix indexed by [int(1..numNodes),
                           int(1..1 + (numNodes - 1))] of int(1..numNodes)
find totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker:
        matrix indexed by [int(1..numNodes)] of int(0..1 + (numNodes - 1))
find totalChildrenMatrix_ExplicitVarSizeWithMarker_Values:
        matrix indexed by [int(1..numNodes),
                           int(1..1 + (numNodes - 1))] of int(1..numNodes)
minimising sum([nodeBroadcastPower[i] | i : int(1..numNodes)])
such that
    and([i = j \/
         sum([directChildrenMatrix_ExplicitVarSizeWithFlags_Flags[i, q15] /\
              or([directChildrenMatrix_ExplicitVarSizeWithFlags_Flags[j, q17] /\
                  directChildrenMatrix_ExplicitVarSizeWithFlags_Values[j, q17] =
                  directChildrenMatrix_ExplicitVarSizeWithFlags_Values[i, q15]
                      | q17 : int(1..1 + (numNodes - 1))])
                  | q15 : int(1..1 + (numNodes - 1))])
         = 0 | i : int(1..numNodes), j : int(1..numNodes)]),
    totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[initialNode] = numNodes,
    and([or([q19 <= totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[node] /\
             totalChildrenMatrix_ExplicitVarSizeWithMarker_Values[node, q19] = node
                 | q19 : int(1..1 + (numNodes - 1))])
         /\
         sum([directChildrenMatrix_ExplicitVarSizeWithFlags_Flags[node, q12] *
              totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[directChildrenMatrix_ExplicitVarSizeWithFlags_Values[node,
                                                                                                                        q12]]
                  | q12 : int(1..1 + (numNodes - 1))])
         = totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[node] - 1
         /\
         and([directChildrenMatrix_ExplicitVarSizeWithFlags_Flags[node, q13] ->
              and([q21 <=
                   totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[directChildrenMatrix_ExplicitVarSizeWithFlags_Values[node,
                                                                                                                             q13]]
                   ->
                   or([q23 <= totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[node] /\
                       totalChildrenMatrix_ExplicitVarSizeWithMarker_Values[node, q23] =
                       totalChildrenMatrix_ExplicitVarSizeWithMarker_Values[directChildrenMatrix_ExplicitVarSizeWithFlags_Values[node,
                                                                                                                                 q13],
                                                                            q21]
                           | q23 : int(1..1 + (numNodes - 1))])
                       | q21 : int(1..1 + (numNodes - 1))])
              /\
              linkCosts[node, directChildrenMatrix_ExplicitVarSizeWithFlags_Values[node, q13]]
              != 0
              /\
              nodeBroadcastPower[node] >=
              linkCosts[node, directChildrenMatrix_ExplicitVarSizeWithFlags_Values[node, q13]]
                  | q13 : int(1..1 + (numNodes - 1))])
             | node : int(1..numNodes)]),
    and([and([directChildrenMatrix_ExplicitVarSizeWithFlags_Flags[q2, q3 + 1] ->
              directChildrenMatrix_ExplicitVarSizeWithFlags_Values[q2, q3] <
              directChildrenMatrix_ExplicitVarSizeWithFlags_Values[q2, q3 + 1]
                  | q3 : int(1..1 + (numNodes - 1) - 1)])
             | q2 : int(1..numNodes)]),
    and([and([directChildrenMatrix_ExplicitVarSizeWithFlags_Flags[q2, q4] = false ->
              directChildrenMatrix_ExplicitVarSizeWithFlags_Values[q2, q4] = 1
                  | q4 : int(1..1 + (numNodes - 1))])
             | q2 : int(1..numNodes)]),
    and([and([directChildrenMatrix_ExplicitVarSizeWithFlags_Flags[q2, q5 + 1] ->
              directChildrenMatrix_ExplicitVarSizeWithFlags_Flags[q2, q5]
                  | q5 : int(1..1 + (numNodes - 1) - 1)])
             | q2 : int(1..numNodes)]),
    and([and([q9 + 1 <= totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[q8] ->
              totalChildrenMatrix_ExplicitVarSizeWithMarker_Values[q8, q9] <
              totalChildrenMatrix_ExplicitVarSizeWithMarker_Values[q8, q9 + 1]
                  | q9 : int(1..1 + (numNodes - 1) - 1)])
             | q8 : int(1..numNodes)]),
    and([and([q10 > totalChildrenMatrix_ExplicitVarSizeWithMarker_Marker[q8] ->
              totalChildrenMatrix_ExplicitVarSizeWithMarker_Values[q8, q10] = 1
                  | q10 : int(1..1 + (numNodes - 1))])
             | q8 : int(1..numNodes)])

