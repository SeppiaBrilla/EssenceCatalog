language ESSENCE' 1.0

given n: int(1..)
find black_ExplicitVarSizeWithMarker_Marker:
        int(0..(1 + (n - 1)) * (1 + (n - 1)))
find black_ExplicitVarSizeWithMarker_Values_1:
        matrix indexed by [int(1..(1 + (n - 1)) * (1 + (n - 1)))] of int(1..n)
find black_ExplicitVarSizeWithMarker_Values_2:
        matrix indexed by [int(1..(1 + (n - 1)) * (1 + (n - 1)))] of int(1..n)
find white_ExplicitVarSizeWithMarker_Marker:
        int(0..(1 + (n - 1)) * (1 + (n - 1)))
find white_ExplicitVarSizeWithMarker_Values_1:
        matrix indexed by [int(1..(1 + (n - 1)) * (1 + (n - 1)))] of int(1..n)
find white_ExplicitVarSizeWithMarker_Values_2:
        matrix indexed by [int(1..(1 + (n - 1)) * (1 + (n - 1)))] of int(1..n)
maximising
    black_ExplicitVarSizeWithMarker_Marker + white_ExplicitVarSizeWithMarker_Marker
such that
    black_ExplicitVarSizeWithMarker_Marker = white_ExplicitVarSizeWithMarker_Marker,
    and([q4 <= black_ExplicitVarSizeWithMarker_Marker ->
         and([q5 <= white_ExplicitVarSizeWithMarker_Marker ->
              black_ExplicitVarSizeWithMarker_Values_1[q4] !=
              white_ExplicitVarSizeWithMarker_Values_1[q5]
              /\
              black_ExplicitVarSizeWithMarker_Values_2[q4] !=
              white_ExplicitVarSizeWithMarker_Values_2[q5]
              /\
              |white_ExplicitVarSizeWithMarker_Values_1[q5] -
               black_ExplicitVarSizeWithMarker_Values_1[q4]|
              !=
              |white_ExplicitVarSizeWithMarker_Values_2[q5] -
               black_ExplicitVarSizeWithMarker_Values_2[q4]|
                  | q5 : int(1..(1 + (n - 1)) * (1 + (n - 1)))])
             | q4 : int(1..(1 + (n - 1)) * (1 + (n - 1)))]),
    and([q1 + 1 <= black_ExplicitVarSizeWithMarker_Marker ->
         black_ExplicitVarSizeWithMarker_Values_1[q1] <
         black_ExplicitVarSizeWithMarker_Values_1[q1 + 1]
         \/
         black_ExplicitVarSizeWithMarker_Values_1[q1] =
         black_ExplicitVarSizeWithMarker_Values_1[q1 + 1]
         /\
         black_ExplicitVarSizeWithMarker_Values_2[q1] <
         black_ExplicitVarSizeWithMarker_Values_2[q1 + 1]
             | q1 : int(1..(1 + (n - 1)) * (1 + (n - 1)) - 1)]),
    and([q1 > black_ExplicitVarSizeWithMarker_Marker ->
         black_ExplicitVarSizeWithMarker_Values_1[q1] = 1 /\
         black_ExplicitVarSizeWithMarker_Values_2[q1] = 1
             | q1 : int(1..(1 + (n - 1)) * (1 + (n - 1)))]),
    and([q2 + 1 <= white_ExplicitVarSizeWithMarker_Marker ->
         white_ExplicitVarSizeWithMarker_Values_1[q2] <
         white_ExplicitVarSizeWithMarker_Values_1[q2 + 1]
         \/
         white_ExplicitVarSizeWithMarker_Values_1[q2] =
         white_ExplicitVarSizeWithMarker_Values_1[q2 + 1]
         /\
         white_ExplicitVarSizeWithMarker_Values_2[q2] <
         white_ExplicitVarSizeWithMarker_Values_2[q2 + 1]
             | q2 : int(1..(1 + (n - 1)) * (1 + (n - 1)) - 1)]),
    and([q2 > white_ExplicitVarSizeWithMarker_Marker ->
         white_ExplicitVarSizeWithMarker_Values_1[q2] = 1 /\
         white_ExplicitVarSizeWithMarker_Values_2[q2] = 1
             | q2 : int(1..(1 + (n - 1)) * (1 + (n - 1)))])

